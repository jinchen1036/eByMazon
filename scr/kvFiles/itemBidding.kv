#: include kvFiles/itemPurchase.kv
<biddingItem>:
    itemIndex: -1
    itemID: 0
    price: 0
    user: False
    bid: False
    disableAction: True
    warn: False
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        BoxLayout:
            orientation: "horizontal"
            padding:[50,0,50,0]
            Image:
                id: itemImage
                size_hint:(0.5,1)
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True
            GridLayout:
                cols: 2
                size_hint:(0.5,1)
                orientation: "vertical"
                LeftLabel:
                    text: "Title: "
                LeftLabel:
                    id: itemTitle
                LeftLabel:
                    text: "Description: "
                LeftLabel:
                    id: itemDescription
                LeftLabel:
                    text: "Start Bidding Price: "
                LeftLabel:
                    id: itemPrice
                LeftLabel:
                    text: "Current Bid: "
                LeftLabel:
                    id: itemBid
                LeftLabel:
                    text: "UsedStatus: "
                LeftLabel:
                    id: itemUsed
                LeftLabel:
                    text: "Likes: "
                LeftLabel:
                    id: itemLike
                LeftLabel:
                    text: "DisLike: "
                LeftLabel:
                    id: itemDislike

        # ------------- top half ------------#

        BoxLayout:
            size_hint_y: 0.3
            orientation: 'horizontal'
            spacing: 20

            Button:
                size_hint_x: 0.25
                background_color: 255, 255, 255, 1
                disabled: 1 if root.user else 0
                on_press: root.likeItem("biddingItem")
                on_press: self.background_color= 100,100,100,0.5
                Image:
                    source: "images/likeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Button:
                size_hint_x: 0.25
                background_color: 255, 255, 255, 1
                disabled: 1 if root.user else 0
                on_press: root.dislikeItem("biddingItem")
                on_press: self.background_color= 100,100,100,0.5
                Image:
                    source: "images/dislikeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Vspace:
                size_hint_x: 0.4
            LeftLabel:
                size_hint_x: 0.4
                font_size: 36
                text: 'Enter price you want bid: '
            ProfileInput:
                size_hint: (0.2,0.5)
                id: purchaseInfo
                text_size: self.size
                disabled: 1 if root.disableAction else 0

            SkyBlueButton:
                size_hint: (0.3,0.5)
                text: "Bid"
                orientation: 'horizontal'
                disabled: 1 if root.disableAction else 0
                on_press: root.toPurchase()
            WarningLabel:
                size_hint_x: 0.3
                font_size: 26
                text: "Please enter vaild number"
                opacity: 1 if root.warn else 0

        BoxLayout:
            orientation: "vertical"
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            size_hint_x: 0.6
            BidPurchase:
                id: purchase
                size_hint_y: 0.9
            BoxLayout:
                orientation: "horizontal"
                size_hint: (0.5,0.2)
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                opacity: 1 if root.bid else 0
                SkyBlueButton:
                    size_hint: (0.3,0.90)
                    text: "Confirm Bidding"
                    disabled: 1 if root.disableAction else 0
                    on_press: root.bidding()
                OrangeButton:
                    size_hint: (0.3,0.90)
                    text: "Cancel Bidding"
                    disabled: 1 if root.disableAction else 0
                    on_press: root.cancelbid()

        GrayButton:
            text: 'GO BACK'
            size_hint_y: .1
            on_press: root.tohome()