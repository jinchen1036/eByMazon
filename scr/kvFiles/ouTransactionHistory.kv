<bought>:
    id: test
    itemID:0
    itemTitle: ''
    sellerID: 0
    sellerName: ''
    price: 0
    time: ''
    ship: False
    complained: False
    rated: False

    cols: 7
    CenterLabel:
        text: root.itemTitle
    CenterLabel:
        text: root.sellerName
    CenterLabel:
        text: '$'+str(root.price)
    CenterLabel:
        text: "Shipped" if root.ship else "Not Yet"
    CenterLabel:
        text: root.time

    BoxLayout:
        ScreenManager:
            id: rating
            Screen:
                name: 'init'
                GreenButton:
                    size_hint:(0.5,0.5)
                    pos_hint: {'center_x':0.5,'center_y':0.5}
                    disabled: 0 if root.ship else 1
                    text: 'Rate'
                    on_press: root.rate()
            Screen:
                name: 'after'
                CenterLabel:
                    id: rateValue
                    text: 'Already Rate'

    BoxLayout:
        ScreenManager:
            id: complain
            Screen:
                name: 'init'
                LightRedButton:
                    size_hint:(0.5,0.5)
                    pos_hint: {'center_x':0.5,'center_y':0.5}
                    disabled: 0 if root.ship else 1
                    text: 'Complain'
                    on_press: root.complain()
            Screen:
                name: 'after'
                CenterLabel:
                    text: 'Complain Filed'

<bid@BoxLayout>:
    itemID:0
    itemTitle: ''
    sellerID: 0
    sellerName: ''
    bidPrice: 0
    bidTime: ''
    endTime: ''
    GridLayout:
        cols:6
        CenterLabel:
            text: root.itemTitle
        CenterLabel:
            text: root.sellerName
        CenterLabel:
            text: '$'+str(root.bidPrice)
        CenterLabel:
            text: root.bidTime
        CenterLabel:
            text: root.endTime
        BoxLayout:


<sold>:
    itemID:0
    itemTitle: ''
    buyerID: 0
    buyerName: ''
    price: 0
    time: ''
    ship: False

    cols: 7
    CenterLabel:
        text: root.itemTitle
    CenterLabel:
        text: root.buyerName
    CenterLabel:
        text: '$'+str(root.price)
    CenterLabel:
        text: "Shipped" if root.ship else "Not Yet"
    CenterLabel:
        text: root.time

    GreenButton:
        size_hint_y:0.2
        disabled: 1 if root.ship else 0
        opacity: 0 if root.ship else 1
        text: 'Accept'
        on_press: root.acceptPurchase()
    LightRedButton:
        size_hint_y:0.2
        disabled: 1 if root.ship else 0
        opacity: 0 if root.ship else 1
        text: 'Decline'
        on_press: root.declinePurchase()

<complain>:
    warn: False
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size_hint: .7, .7
        padding: 20,20
        pos_hint: {'center_x': .5, 'center_y': .5}
        BoldLabel:
            size_hint_y: 0.2
            text: "Please Enter Your Complain Below"
        TextInput:
            id: complain_response
            hint_text: 'Enter Your Complain, Cannot leave blank'
            size_hint: (0.6,0.6)
            pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            spacing: 20
            RedButton:
                text: 'Submit'
                on_press: root.submitComplain(complain_response.text)
            GrayButton:
                text: 'Cancel'
                on_press: root.toHistory()
        CenterLabel:
            size_hint_y: 0.1
            text: "You cannot leave description blank!!!"
            opacity: 1 if complain_response.text == "" else 0

<rate>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size_hint: .7, .7
        padding: 20,20
        pos_hint: {'center_x': .5, 'center_y': .5}

        BoldLabel:
            size_hint_y: 0.1
            text: "Please Enter Your Rating Below"
        GridLayout:
            cols: 2
            size_hint_y: 0.5
            BoldLabel:
                text:"Please Select the Rating \nbetween 1 - 5: "
            BoxLayout:
                orientation: 'horizontal'
                Slider:
                    id: rating
                    min: 0
                    max: 5
                    step: 0.5
                    size_hint_y: .8
                CenterLabel:
                    text: str(rating.value)
            BoldLabel:
                text: "Please Leave \nYour Comments"
            TextInput:
                id: rate_response
                hint_text: 'Enter Your comments'
                size_hint: (0.8,.8)
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: 0.2
            RedButton:
                text: 'Submit'
                on_press: root.submitRate(rating.value,rate_response.text)
            GrayButton:
                text: 'Cancel'
                on_press: root.toHistory()
        CenterLabel:
            size_hint_y: 0.1
            text: "You cannot leave rating blank!!!"
            opacity: 1 if rate_response.text == "" else 0


