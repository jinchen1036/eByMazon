<ouInformation>
    remove: False
    ouID: 0
    ouName: ''
    ouPhone: ""
    ouEmail: ''
    ouCard: ''
    ouAddress: ''
    ouState: ''
    ouStatus:''
    ouRate: 0
    ouComplaint: 0
    ouWarning: 0
    orientation: "vertical"
    BoxLayout:
        size_hint_y: 0.2
        BoldLabel:
            text: "OU ID: %s" % root.ouID

    BoxLayout:
        size_hint_y: 0.8
        orientation: 'horizontal'
        BoxLayout:
            orientation: "vertical"
            padding: 250, 20, 0, 0
            size_hint_x: (0.8)
            LeftLabel:
                text: "Name:  " + root.ouName
            LeftLabel:
                text: "Phone number:  " + root.ouPhone
            LeftLabel:
                text: "Email:  " + root.ouEmail
            LeftLabel:
                text: "Card Info:  " + root.ouCard
            LeftLabel:
                text: "Address:  " + root.ouAddress
            LeftLabel:
                text: "State:  " + root.ouState

        BoxLayout:
            orientation: "vertical"
            padding: 150, 0, 400, 0
            size_hint_x: (0.8)
            LeftLabel:
                text: "Status: " + root.ouStatus
            LeftLabel:
                text: "Rate:  " + str(root.ouRate)
            LeftLabel:
                text: "Complaint:  " + str(root.ouComplaint)
            LeftLabel:
                text: "Warning:  " + str(root.ouWarning)
            PinkButton:
                text: "Remove"
                opacity: 0 if root.remove else 1
                disabled: True if root.remove else False
                on_press: root.removeOU(root.ouID)

<ouAppeal>:
    ouID: 0
    message: ""
    time: ""
    BoxLayout:
        orientation: "vertical"
        BoldLabel:
            size_hint_y: 0.2
            text: "OU ID: %s" % root.ouID
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.7
                CenterLabel:
                    size_hint_y: 0.7
                    text: root.message
                CenterLabel:
                    size_hint_y: 0.4
                    text: "Appeal Time: "+ root.time
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.3,0.6)
                pos_hint:{'center_x':0.5,'center_y':0.5}
                GreenButton:
                    size_hint_x:0.5
                    text: 'Accept'
                    on_press: root.acceptAppeal()
                LightRedButton:
                    size_hint_x:0.5
                    text: 'Decline'
                    on_press: root.declineAppeal()


