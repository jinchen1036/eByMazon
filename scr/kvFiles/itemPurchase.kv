<FixedPurchase>:
    singlePrice: 0
    numberBuy: 0
    tax:0
    vip: 0
    friend: 0
    finalPrice: 0
    purchased: False
    ScreenManager:
        id: purchaseManager
        Screen:
            name: "empty"
            BoldLabel:
                text: "You have purchased the item \nWith total price $%s\nMoney transaction will be make after item shipped" %str(root.finalPrice)
                opacity: 1 if root.purchased else 0
        Screen:
            name: "duplicate"
            BoldLabel:
                text: "You already purchased this item"
        Screen:
            name: "cancel"
            BoldLabel:
                text: "You have cancel the purchase"
        Screen:
            name: "Purchase"
            BoxLayout:
                orientation: "vertical"
                GridLayout:
                    size_hint: (0.8,0.6)
                    cols: 2
                    RightLabel:
                        text:"Item Price:"
                    RightLabel:
                        text:str(root.singlePrice)
                    RightLabel:
                        text:"Item Quantity:"
                    RightLabel:
                        text:str(root.numberBuy)
                    RightLabel:
                        text:"Price before tax & discount:"
                    RightLabel:
                        text:str(root.singlePrice*root.numberBuy)
                    RightLabel:
                        text:"Tax Collect:"
                    RightLabel:
                        text:'+' + str(root.tax)
                    RightLabel:
                        text:"VIP Discount:" if root.vip != 0 else ""
                    RightLabel:
                        text: '-' +str(root.vip) if root.vip != 0 else ""
                    RightLabel:
                        text:"Friend Discount:" if root.friend != 0 else ""
                    RightLabel:
                        text: '-' +str(root.friend) if root.friend != 0 else ""
                    RightLabel:
                        bold: True
                        text:"Final Price:"
                    RightLabel:
                        bold: True
                        text: str(root.finalPrice)

<BidPurchase>:
    bidPrice: 0
    tax:0
    vip: 0
    friend: 0
    finalPrice: 0
    purchased: False
    ScreenManager:
        id: purchaseManager
        Screen:
            name: "empty"
            BoldLabel:
                text: "Your bid is recorded.\nWith bid price $%s\nEstimate final price $%s" %(str(root.bidPrice),str(root.finalPrice))
                opacity: 1 if root.purchased else 0
        Screen:
            name: "bidWarn"
            BoldLabel:
                text: "You already bid this item"
        Screen:
            name: "cancel"
            BoldLabel:
                text: "You have cancel the Bidding"
        Screen:
            name: "Purchase"
            BoxLayout:
                orientation: "vertical"
                GridLayout:
                    size_hint: (0.8,0.6)
                    cols: 2
                    RightLabel:
                        text:"Bid Price:"
                    RightLabel:
                        text:str(root.bidPrice)
                    RightLabel:
                        text:"Estimate Tax Collect:"
                    RightLabel:
                        text:'+' + str(root.tax)
                    RightLabel:
                        text:"VIP Discount:" if root.vip != 0 else ""
                    RightLabel:
                        text: '-' +str(root.vip) if root.vip != 0 else ""
                    RightLabel:
                        text:"Friend Discount:" if root.friend != 0 else ""
                    RightLabel:
                        text: '-' +str(root.friend) if root.friend != 0 else ""
                    RightLabel:
                        bold: True
                        text:"Estimate Final Price:"
                    RightLabel:
                        bold: True
                        text: str(root.finalPrice)
