<friendInfo>:
    friendID : -1
    discount: 0
    username:""
    cols: 3
    padding : 5, 0
    spacing: 10, 0
    isUserName: True
    isDiscount: True
    BlueButton:
        size_hint: (.35,0.5)
        text: root.username
        on_press: root.getFriendMessage()
    CenterLabel:
        size_hint_x: .15
        text: str(root.discount)+'%'
    RedButton:
        size_hint: (.35,0.5)
        text: "Delete"
        on_press: root.deleteFriend()

<messageBox@GridLayout>:
    send:True
    message:""
    sendTime:""
    cols: 2
    canvas.before:
        Color:
            rgb: (255, 204, 255)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint_x: 0.8
        text: root.message
        text_size: self.size
        halign: 'right' if root.send else 'left'
        valign: 'middle'
        color: [0, 100, 255, 0.5] if root.send else [2.17, 2.17, 2.17, 0.7]
    centerBLabel:
        size_hint_x: 0.2
        text:root.sendTime
        halign: 'right'
        valign: 'middle'
        text_size: self.size
<friendRequest>:
    friendID : -1
    username:""
    cols: 3
    padding : 5, 0
    spacing: 10, 0
    BlueButton:
        size_hint: (.35,0.5)
        text: root.username
        on_press: root.getFriendMessage()
    TextInput:
        id: discount
        size_hint_x: .15
        hint_text: '5%'
        text: ''
    RedButton:
        size_hint: (.35,0.5)
        text: "Add"
        on_press: root.addFriend()

<friendList>:
    selectedFriend: " Unselected "
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            size_hint_y:0.1
            BoldLabel:
                size_hint_x:0.9
                text:"My Friend List"
            PinkButton:
                size_hint_x:0.1
                text:"Go Back"
                on_press:root.backProfile()
        BoxLayout:
            size_hint_y:0.9
            orientation:"horizontal"
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.4,1)
                pos_hint: {'center_y': .5, 'center_x': 0.8}
                CenterLabel:
                    text: "Your Friends"
                    size_hint_y: 0.1
                GridLayout:
                    size_hint_y: 0.2
                    cols: 3
                    CenterLabel:
                        size_hint_x: .25
                        text: 'username'
                    CenterLabel:
                        size_hint_x: .25
                        text: 'discount'
                    CenterLabel:
                        size_hint_x: .15
                RecycleView:
                    size_hint_y: 0.6
                    id: friends
                    data: []
                    viewclass: 'friendInfo'
                    VRVL:
                        default_size: None, dp(40)
                CenterLabel:
                    text: "People add you as friend"
                    size_hint_y: 0.1
                GridLayout:
                    size_hint_y: 0.1
                    cols: 3
                    CenterLabel:
                        size_hint_x: .25
                        text: 'username'
                    CenterLabel:
                        size_hint_x: .25
                        text: 'discount'
                    CenterLabel:
                        size_hint_x: .15
                RecycleView:
                    size_hint_y: 0.6
                    id: friendReq
                    data: []
                    viewclass: 'friendRequest'
                    VRVL:
                        default_size: None, dp(40)
                BoxLayout:
                    orientation:"vertical"
                    size_hint_y: 0.3
                    WarningLabel:
                        id: warning
                        text: ''
                        size_hint_x: 1.3
                        pos_hint: {'center_y': 0.5, 'center_x': 0.7}
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint:(1.2,.8)
                        OrangeButton:
                            text:"Add New Friend"
                            on_press: root.addFriend(friendName.text,discount.text)
                            size_hint_x: .5
                        TextInput:
                            id: friendName
                            hint_text: 'username'
                            size_hint_x: .4

                        TextInput:
                            id: discount
                            hint_text: 'discount (%)'
                            size_hint_x: .3

            Vspace:
            BoxLayout:
                size_hint:(0.7,0.9)
                orientation:"vertical"
                pos_hint: {'center_y': .5, 'center_x': 0.3}
                CenterLabel:
                    size_hint_y:0.2
                    text:"Messages with " + root.selectedFriend
                RecycleView:
                    size_hint_y: 0.7
                    id: messages
                    canvas.before:
                        Color:
                            rgb: (255, 204, 255)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    data: []
                    viewclass: 'messageBox'
                    VRVL:
                        default_size: None, dp(30)
                BoxLayout:
                    orientation:"horizontal"
                    size_hint_y:0.2
                    TextInput:
                        id: chat
                        size_hint: (0.8,0.5)
                        multiline: False
                    SkyBlueButton:
                        id: send
                        size_hint_y:0.5
                        size_hint_x: .2
                        text:"send"
                        on_press: root.sentMessage(chat.text)
#                        disable: 1 if root.selectedFriend == " Unselected " else 0
                RightLabel:
                    size_hint_y:0.1
                    color: 1, 0, 1, 1
                    font_size: 48
                    bold: True
                    id: warn
