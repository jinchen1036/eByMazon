<tabooWords@BoxLayout>:
    taboo: ""
    BoxLayout:
        orientation:"vertical"
        CenterLabel:
            text: root.taboo

<userBlackLists@BoxLayout>:
    username: ""
    BoxLayout:
        orientation:"vertical"
        CenterLabel:
            text: root.username

<itemBlackLists@BoxLayout>:
    ownerID: ""
    itemID: ""
    itemTitle: ""
    GridLayout:
        cols: 3
        CenterLabel:
            text: root.ownerID
        CenterLabel:
            text: root.itemID
        CenterLabel:
            text: root.itemTitle


<blackTaboo>:
#    name: "GUapplication"
#    warnShow: False
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint_y: 0.1
                Label:
                    size_hint_x: 0.9
                GrayButton:
                    text:"Home"
                    size_hint_x: 0.1
                    size: 150, 100
                    on_press: root.tohome()
            BoxLayout:
                orientation:"horizontal"
                BoxLayout:
                    orientation:"vertical"
#                    BoxLayout:
#                        size_hint_y: 0.2
                    CenterLabel:
                        size_hint_y: 0.2
                        text: "Manage Taboo List"
                        font_size: 50
                        bold: True
                    RecycleView:
                        size_hint_y: 0.7
                        id: tabooList
                        data: []
                        viewclass: 'tabooWords'
                        VRVL:
                            default_size: None, dp(20)
                    BoxLayout:
                        size_hint:(0.6, 0.2)
                        pos_hint: {'center_x':0.6,'center_y':0.5}
                        orientation:"vertical"
                        padding: 0,0,0,30
                        CenterLabel:
                            id: warnShow
#                            text: "Empty value invalid" if root.warnShow else ""
                        ProfileInput:
                            size_hint_x: 0.7
                            id: tabooWord
                        OrangeButton:
                            size_hint_x: 0.7
                            text: "Add new taboo word"
                            on_press: root.addTabooWord()

                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        size_hint_y:0.2
                        BoldLabel:
                            text: "Username BlackList"
                            font_size: 50
                    RecycleView:
                        size_hint_y: 0.7
                        id: userBlackList
                        data: []
                        viewclass: 'userBlackLists'
                        VRVL:
                            default_size: None, dp(20)
#                    BoxLayout:

                    BoldLabel:
                        size_hint_y:0.2
                        text: "Item BlackList"
                        font_size: 50
                    GridLayout:
                        size_hint_y: 0.2
                        cols: 3
                        CenterLabel:
                            text: "ownerID"
                        CenterLabel:
                            text: "itemID"
                        CenterLabel:
                            text: "itemTitle"
                    RecycleView:
                        size_hint_y: 0.7
                        id: itemBlackList
                        data: []
                        viewclass: 'itemBlackLists'
                        VRVL:
                            default_size: None, dp(20)