#: include kvFiles/itemPurchase.kv
<fixedItem>:
    itemIndex: -1
    user: False
    purchased: False
    disableAction: True
    price: 0
    numberAva: 0
    warn: False
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        BoxLayout:
            orientation: "horizontal"
            padding:[50,0,50,0]
            Image:
                id: itemImage
                size_hint:(0.5,1)
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True

            GridLayout:
                cols: 2
                size_hint:(0.5,1)
                orientation: "vertical"
                LeftLabel:
                    text: "Title: "
                LeftLabel:
                    id: itemTitle
                LeftLabel:
                    text: "Description: "
                LeftLabel:
                    id: itemDescription
                LeftLabel:
                    text: "Price: "
                LeftLabel:
                    id: itemPrice
                LeftLabel:
                    text: "Number Available: "
                LeftLabel:
                    id: itemAvailable
                LeftLabel:
                    text: "Rating: "
                LeftLabel:
                    id: itemRates
                LeftLabel:
                    text: "Likes: "
                LeftLabel:
                    id: itemLike
                LeftLabel:
                    text: "DisLike: "
                LeftLabel:
                    id: itemDislike
        # ------------- top half ------------#

        BoxLayout:
            size_hint_y: 0.3
            orientation: 'horizontal'
#            spacing: 40
            Button:
                size_hint_x: 0.3
                background_color: 255, 255, 255, 1
                disabled: 1 if root.user else 0
                on_press: root.likeItem("fixedItem")
#                on_press: self.background_color = 100,100,100,1
                Image:
                    source: "images/likeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Button:
                size_hint_x: 0.3
                background_color: 255, 255, 255, 1
                disabled: 1 if root.user else 0
#                on_press: self.background_color = 100,100,100,1
                on_press: root.dislikeItem("fixedItem")
                Image:
                    source: "images/dislikeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Label:
                size_hint_x: 0.4
            LeftLabel:
                size_hint_x: 0.4
                font_size: 36
                text: 'Enter number of item \nyou want buy: '
            ProfileInput:
                size_hint: (0.2,0.5)
                id: purchaseInfo
                text_size: self.size
                disabled: 1 if root.disableAction else 0

            SkyBlueButton:
                size_hint: (0.3,0.5)
                text: "Purchase"
                on_press: root.toPurchase()
                disabled: 1 if root.disableAction else 0
            WarningLabel:
                size_hint_x: 0.3
                font_size: 26
                text: "Please enter vaild number"
                opacity: 1 if root.warn else 0


        BoxLayout:
            height: 30
            orientation: 'horizontal'
            padding: 20,20
            BoxLayout:
                orientation: 'vertical'
                size_hint:(0.4,1)
                LeftLabel:
                    size_hint_y: 0.2
                    text: "Ratings:"
                    font_size: 48
                    bold: True
                GridLayout:
                    size_hint_y: 0.1
                    cols: 3
                    CenterLabel:
                        size_hint_x: 0.15
                        text: "Rater"
                    CenterLabel:
                        size_hint_x: 0.15
                        text: "Rating"
                    CenterLabel:
                        size_hint_x: 0.7
                        text: "Comment"
                RecycleView:
                    size_hint_y: 0.7
                    id: itemRate
                    data: []
                    viewclass: "itemRating"
                    VRVL:
                        default_size: None, dp(40)

            BoxLayout:
                orientation: "vertical"
                size_hint: (0.6,1)
                FixedPurchase:
                    id: purchase
                    size_hint_y: 0.9
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (0.5,0.2)
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    opacity: 1 if root.purchased else 0
                    SkyBlueButton:
                        size_hint: (0.3,0.90)
                        text: "Confirm Purchase"
                        on_press: root.purchasing()
                    OrangeButton:
                        size_hint: (0.3,0.90)
                        text: "Cancel Purchase"
                        on_press: root.cancelPurchase()

        GrayButton:
            text: 'GO BACK'
            size_hint_y: .1
            on_press: root.tohome()


<itemRating@GridLayout>:
    rater: ""
    rating: 0
    comment: ""
    cols: 3
    CenterLabel:
        size_hint_x: 0.15
        text: root.rater
    CenterLabel:
        size_hint_x: 0.15
        text: str(root.rating)
    CenterLabel:
        size_hint_x: 0.7
        text: root.comment